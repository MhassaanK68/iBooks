@using Microsoft.AspNetCore.Http;
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor SessionAccessor

@{
    string username = SessionAccessor.HttpContext.Session.GetString("Usr");
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <metah name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>iBooks Pakistan - Read Anywhere</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <title></title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Bookstore.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,300;0,400;0,500;0,700;1,300;1,400;1,500;1,700&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@100..900&family=Ubuntu:ital,wght@0,300;0,400;0,500;0,700;1,300;1,400;1,500;1,700&display=swap" rel="stylesheet">

</head>
<body>
    <style>
        .logo {
            height: 34px;
            width: 34px;}

        .btn-signin {
            font-size: large !important;
            font-weight: 500 !important;
            font-family: 'Inter';

        }
 
 
        

    </style>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark border-bottom box-shadow mb-3">
            
            <div class="container-fluid">
                 <a href="/"><img src="~/Assets/Images/logo.png" class="logo me-2 ms-3"/></a>
                <a class="navbar-brand headings" asp-area="" asp-controller="Home" asp-action="Index">iBooks</a>
                <button onclick="" class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                 <div class="navbar-collapse collapse d-sm-inline-flex justify-content-center  text-family-main"></div>
                
                    <div class="d-none d-sm-block">
                    @if (username != null)
                    {

                        <div class="dropdown">
                            <a class="nav-link dropdown-toggle " href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="material-icons icons me-3">account_circle</i>
                            </a>
                            <ul class="dropdown-menu dropdown-menu-right-adjust" aria-labelledby="navbarDropdown">
                                <li><a class="dropdown-item sma-text" href="#"><i class="material-icons dropdown-icons">settings</i> Settings</a></li>
                                <li><a class="dropdown-item sma-text" href="#"><i class="material-icons dropdown-icons">help</i> Help</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item sma-text" href="/Account/LogOut"><i class="material-icons dropdown-icons">logout</i> Sign Out</a></li>
                            </ul>
                        </div>


                    }
                    else
                    {
                        <a href="/Account/SignIn"><button class="btn btn-dark pe-4 ps-4 nav-item me-2 btn-signin">Sign-In</button></a>
                    }                  
                    </div>       
            </div>
        </nav>
    </header>
    
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.bundle.min.js"></script>
</body>
    
