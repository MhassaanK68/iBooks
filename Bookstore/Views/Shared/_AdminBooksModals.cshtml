@model BooksModel
@{
    List<SelectListItem> CategoryTypes = new List<SelectListItem>()
    {
        new SelectListItem {Value = "0", Text = "Sci-Fi"},
        new SelectListItem {Value = "1", Text = "Adventure"},
        new SelectListItem {Value = "2", Text = "Romantic"},
        new SelectListItem {Value = "3", Text = "Horror"},
        new SelectListItem {Value = "4", Text = "Humor"},
        new SelectListItem {Value = "4", Text = "Fantasy"},
        new SelectListItem {Value = "5", Text = "Thriller"}
    };

}

@* MODELS *@

@* Upload BOOK MODAL *@
<div class="modal fade" id="CreateBook" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="staticBackdropLabel">Upload New Book</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body p-3">


                @* Modal Body *@

                <h5 class="card-title restitle text-center p-2">Upload New Book</h5>

                <form asp-action="CreateUser" autocomplete="off" asp-controller="Admin" method="post" id="CreateBookForm" class="MainFont client-validate">


                    <input autocomplete="false" name="hidden" type="text" style="display:none;">

                    <div class="form-floating wt">
                        <input asp-for="BookName" class="form-control" placeholder="name@example.com" />
                        <label asp-for="BookName"> Enter Book Name </label>
                    </div>
                    <span class="pb-3 text-danger" asp-validation-for="BookName"></span>

                    <br />

                    <div class="form-floating wt">
                        <input asp-for="Author" class="form-control" placeholder="name@example.com" />
                        <label asp-for="Author"> Enter Author Name</label>
                    </div>
                    <span class="pb-3 text-danger" asp-validation-for="Author"></span>

                    <br />

                    <div class="mb-3">
                        <label for="formFile" class="form-label">Upload Thumbnail:</label>
                        <input class="form-control" type="file" id="formFile">
                    </div>
                    <span class="pb-3 text-danger" asp-validation-for="ImageSource"></span>

                    <div class="mb-3">
                        <label for="formFile" class="form-label">Upload PDF:</label>
                        <input class="form-control" type="file" id="formFile">
                    </div>
                    <span class="pb-3 text-danger" asp-validation-for="ImageSource"></span>

 
                    <label class="mb-2">Category:</label>
                    <select name="Role" asp-for="Category" asp-items="CategoryTypes" class="form-select">
                    </select>
                    <span class="pb-3 text-danger" asp-validation-for="Category"></span>
                    <br />

                </form>


            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" data-bs-dismiss="modal">Cancel</button>
                <button type="submit" form="CreateBookForm" class="btn btn-primary">Create</button>
            </div>
        </div>
    </div>
</div>


@* DELETE BOOK MODAL *@
<div class="modal fade" id="DeleteBook" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="staticBackdropLabel">Delete Book</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body p-3">


                @* Modal Body *@

                <h5 class="card-title restitle text-center p-2">Remove Book</h5>

                <form asp-action="DeleteUser" autocomplete="off" asp-controller="Admin" method="post" id="DeleteBookForm" class="MainFont client-validate">


                    <input autocomplete="false" name="hidden" type="text" style="display:none;">

                    <div class="input-group mb-3">
                        <input asp-for="BookName" type="text" class="form-control" placeholder="Book Name" aria-label="Recipient's username" aria-describedby="button-addon2">
                        <button class="btn btn-outline-secondary" type="button" id="button-addon2">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-search" viewBox="0 0 16 16">
                                <path d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001q.044.06.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1 1 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0" />
                            </svg>
                        </button>
                    </div>
                    <span class="pb-3 text-danger" asp-validation-for="BookName"></span>

                    

                </form>


            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" data-bs-dismiss="modal">Cancel</button>
                <button type="submit" form="DeleteBookForm" class="btn btn-primary">Create</button>
            </div>
        </div>
    </div>
</div>

@* Schedule A Release Modal *@
<div class="modal fade" id="ReleaseBook" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="staticBackdropLabel">Schedule Book Release</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body p-3">


                @* Modal Body *@

                <h5 class="card-title restitle text-center p-2">Remove Book</h5>

                <form asp-action="ReleaseBook" autocomplete="off" asp-controller="Admin" method="post" id="ReleaseBookForm" class="MainFont client-validate">


                    <input autocomplete="false" name="hidden" type="text" style="display:none;">

                    <div class="form-floating wt">
                        <input asp-for="BookName" class="form-control" placeholder="name@example.com" />
                        <label asp-for="BookName"> Search Book </label>
                    </div>
                    <span class="pb-3 text-danger" asp-validation-for="BookName"></span>



                </form>


            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" data-bs-dismiss="modal">Cancel</button>
                <button type="submit" form="DeleteBookForm" class="btn btn-primary">Create</button>
            </div>
        </div>
    </div>
</div>