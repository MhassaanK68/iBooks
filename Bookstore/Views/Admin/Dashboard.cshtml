@{
    

    Layout = "_AdminLayout";

    @model IQueryable<AdminActivityModel>
    @using System;
    @using Microsoft.AspNetCore.Http;
    @inject Microsoft.AspNetCore.Http.IHttpContextAccessor SessionAccessor

    string username = SessionAccessor.HttpContext.Session.GetString("Usr");
}

<div class="container-fluid  mt-4">

    <div class="row">
        <div class="ms-4 col-6">
            <h1 class="mb-0 Heading">Hi! @username</h1>
            <p class="sm-text lead">Welcome to the admin panel.</p>
        </div>
    </div>

    <partial name="_AdminUserModals" model="ViewBag.dropdown" />

    <!-- First Section -->
    <div class="row">

        <!-- Quick Actions -->
        <div class="col-lg-8">
            <div class="card round-card p-3 w-100 mb-3 custom-card-height">
                <div class="w-100">
                    <div class="row">
                        <h1 class="card-title mb-0 px-3 pt-2 pb-1">Quick Actions</h1>

                        <div class="col-sm-6 mt-3">
                            <div class="card round-card responsive-cards">
                                <div class="card-body">
                                    <div class="row">
                                        <div class="col mt-0">
                                            <h5 class="card-title restitle card-title-w">Add Books</h5>
                                            <p class="res-para sm-text">Publish New Books</p>
                                        </div>
                                        <div class="col-auto">
                                            <div class="stat text-primary">
                                                <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" fill="currentColor" class="bi bi-journal-arrow-up" viewBox="0 0 16 16">
                                                    <path fill-rule="evenodd" d="M8 11a.5.5 0 0 0 .5-.5V6.707l1.146 1.147a.5.5 0 0 0 .708-.708l-2-2a.5.5 0 0 0-.708 0l-2 2a.5.5 0 1 0 .708.708L7.5 6.707V10.5a.5.5 0 0 0 .5.5" />
                                                    <path d="M3 0h10a2 2 0 0 1 2 2v12a2 2 0 0 1-2 2H3a2 2 0 0 1-2-2v-1h1v1a1 1 0 0 0 1 1h10a1 1 0 0 0 1-1V2a1 1 0 0 0-1-1H3a1 1 0 0 0-1 1v1H1V2a2 2 0 0 1 2-2" />
                                                    <path d="M1 5v-.5a.5.5 0 0 1 1 0V5h.5a.5.5 0 0 1 0 1h-2a.5.5 0 0 1 0-1zm0 3v-.5a.5.5 0 0 1 1 0V8h.5a.5.5 0 0 1 0 1h-2a.5.5 0 0 1 0-1zm0 3v-.5a.5.5 0 0 1 1 0v.5h.5a.5.5 0 0 1 0 1h-2a.5.5 0 0 1 0-1z" />
                                                </svg>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="mb-0">
                                        <button class="btn btn-lg btn-primary my-2">Click Here!</button>
                                    </div>
                                </div>
                            </div>
                            <div class="card round-card responsive-cards mt-2">
                                <div class="card-body">
                                    <div class="row">
                                        <div class="col mt-0">
                                            <h5 class="card-title restitle card-title-w">Create Accounts</h5>
                                            <p class="res-para sm-text">Create User/Admin</p>
                                        </div>
                                        <div class="col-auto">
                                            <div class="stat text-primary">
                                                <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" fill="currentColor" class="bi bi-person-lock" viewBox="0 0 16 16">
                                                    <path d="M11 5a3 3 0 1 1-6 0 3 3 0 0 1 6 0M8 7a2 2 0 1 0 0-4 2 2 0 0 0 0 4m0 5.996V14H3s-1 0-1-1 1-4 6-4q.845.002 1.544.107a4.5 4.5 0 0 0-.803.918A11 11 0 0 0 8 10c-2.29 0-3.516.68-4.168 1.332-.678.678-.83 1.418-.832 1.664zM9 13a1 1 0 0 1 1-1v-1a2 2 0 1 1 4 0v1a1 1 0 0 1 1 1zm3-3a1 1 0 0 0-1 1v1h2v-1a1 1 0 0 0-1-1" />
                                                </svg>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="mb-0">
                                        <button class="btn btn-lg btn-primary my-2" data-bs-toggle="modal" data-bs-target="#CreateUser">Click Here!</button>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="col-sm-6 mt-3">
                            <div class="card round-card responsive-cards">
                                <div class="card-body">
                                    <div class="row">
                                        <div class="col mt-0">
                                            <h5 class="card-title restitle card-title-w">Delete User</h5>
                                            <p class="res-para sm-text">Details By Username</p>
                                        </div>
                                        <div class="col-auto">
                                            <div class="stat text-primary">
                                                <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" fill="currentColor" class="bi bi-person-lines-fill" viewBox="0 0 16 16">
                                                    <path d="M6 8a3 3 0 1 0 0-6 3 3 0 0 0 0 6m-5 6s-1 0-1-1 1-4 6-4 6 3 6 4-1 1-1 1zM11 3.5a.5.5 0 0 1 .5-.5h4a.5.5 0 0 1 0 1h-4a.5.5 0 0 1-.5-.5m.5 2.5a.5.5 0 0 0 0 1h4a.5.5 0 0 0 0-1zm2 3a.5.5 0 0 0 0 1h2a.5.5 0 0 0 0-1zm0 3a.5.5 0 0 0 0 1h2a.5.5 0 0 0 0-1z" />
                                                </svg>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="mb-0">
                                        <button class="btn btn-lg btn-primary my-2" data-bs-toggle="modal" data-bs-target="#DeleteUser">Click Here!</button>
                                    </div>
                                </div>
                            </div>
                            <div class="card round-card responsive-cards mt-2">
                                <div class="card-body">
                                    <div class="row">
                                        <div class="col mt-0">
                                            <h5 class="card-title restitle card-title-w">Watch Catalog</h5>
                                            <p class="res-para sm-text">List Of Books Available</p>
                                        </div>
                                        <div class="col-auto">
                                            <div class="stat text-primary">
                                                <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" fill="currentColor" class="bi bi-bookshelf" viewBox="0 0 16 16">
                                                    <path d="M2.5 0a.5.5 0 0 1 .5.5V2h10V.5a.5.5 0 0 1 1 0v15a.5.5 0 0 1-1 0V15H3v.5a.5.5 0 0 1-1 0V.5a.5.5 0 0 1 .5-.5M3 14h10v-3H3zm0-4h10V7H3zm0-4h10V3H3z" />
                                                </svg>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="mb-0">
                                        <button class="btn btn-lg btn-primary my-2">Click Here!</button>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card round-card activity custom-card-height">
                <div class="card-body">
                    <div class="row p-3">
                        <div class="col-6 h4">Activity</div>
                        <div class="col-6 text-end"><a><h5 class="text-primary clicker">View All</h5></a></div>
                    </div>
                    <!-- NOTIFICATION -->
                    <div class="d-flex flex-column">
                    @foreach (var activity in Model)
                    {
                        <div class="alert alert-beige activity-item" role="alert">
                            <h6>@activity.AdminName @activity.ActivityMessage</h6>
                            <p style="font-size: 0.7rem;" class="sm-text date mb-0">@activity.Time</p>
                        </div>
                    }
                    </div>

                </div>
            </div>
        </div>

        



    </div>

    @* Projects Section *@
    <div class="row">
        <div class="card">

        </div>
    </div>

</div>
