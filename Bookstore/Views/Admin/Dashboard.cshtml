    <!-- Main content -->
    <div class="main-content">     

        <div class="container-fluid mt-4">
            <!-- Page content goes here -->
            <h1 class="display-5">Dashboard</h1>
            <p class="lead">Welcome to the admin panel.</p>


            <div class="row">

                <div class="col-xl-6 col-xxl-5 d-flex">
                    <div class="w-100">
                        <div class="row">

                            <div class="card-header">
                                <h5 class="card-title mb-0">Quick Actions</h5>
                            </div>

                            <div class="col-sm-6 mt-3">

                                <div class="card">
                                    <div class="card-body">
                                        
                                        <div class="row">
                                            <div class="col mt-0">
                                                <h5 class="card-title">Add New Books</h5>
                                            </div>

                                            <div class="col-auto">
                                                <div class="stat text-primary">
                                                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" class="bi bi-journal-arrow-up" viewBox="0 0 16 16">
                                                        <path fill-rule="evenodd" d="M8 11a.5.5 0 0 0 .5-.5V6.707l1.146 1.147a.5.5 0 0 0 .708-.708l-2-2a.5.5 0 0 0-.708 0l-2 2a.5.5 0 1 0 .708.708L7.5 6.707V10.5a.5.5 0 0 0 .5.5" />
                                                        <path d="M3 0h10a2 2 0 0 1 2 2v12a2 2 0 0 1-2 2H3a2 2 0 0 1-2-2v-1h1v1a1 1 0 0 0 1 1h10a1 1 0 0 0 1-1V2a1 1 0 0 0-1-1H3a1 1 0 0 0-1 1v1H1V2a2 2 0 0 1 2-2" />
                                                        <path d="M1 5v-.5a.5.5 0 0 1 1 0V5h.5a.5.5 0 0 1 0 1h-2a.5.5 0 0 1 0-1zm0 3v-.5a.5.5 0 0 1 1 0V8h.5a.5.5 0 0 1 0 1h-2a.5.5 0 0 1 0-1zm0 3v-.5a.5.5 0 0 1 1 0v.5h.5a.5.5 0 0 1 0 1h-2a.5.5 0 0 1 0-1z" />
                                                    </svg>
                                                </div>
                                            </div>
                                        </div>

                                        <div class="mb-0">
                                            <button class="btn btn-lg btn-primary my-2">Click Here!</button>
                                        </div>
                                    </div>
                                </div>

                                <div class="card mt-2">
                                    <div class="card-body">

                                        <div class="row">
                                            <div class="col mt-0">
                                                <h5 class="card-title">Create Admins</h5>
                                            </div>

                                            <div class="col-auto">
                                                <div class="stat text-primary">
                                                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" class="bi bi-person-lock" viewBox="0 0 16 16">
                                                        <path d="M11 5a3 3 0 1 1-6 0 3 3 0 0 1 6 0M8 7a2 2 0 1 0 0-4 2 2 0 0 0 0 4m0 5.996V14H3s-1 0-1-1 1-4 6-4q.845.002 1.544.107a4.5 4.5 0 0 0-.803.918A11 11 0 0 0 8 10c-2.29 0-3.516.68-4.168 1.332-.678.678-.83 1.418-.832 1.664zM9 13a1 1 0 0 1 1-1v-1a2 2 0 1 1 4 0v1a1 1 0 0 1 1 1v2a1 1 0 0 1-1 1h-4a1 1 0 0 1-1-1zm3-3a1 1 0 0 0-1 1v1h2v-1a1 1 0 0 0-1-1" />
                                                    </svg>
                                                </div>
                                            </div>
                                        </div>

                                        <div class="mb-0">
                                            <button class="btn btn-lg btn-primary my-2">Click Here!</button>
                                        </div>
                                    </div>
                                </div>

                            </div>

                            <div class="col-sm-6 mt-3">

                                <div class="card">
                                    <div class="card-body">

                                        <div class="row">
                                            <div class="col mt-0">
                                                <h5 class="card-title">Search User</h5>
                                            </div>

                                            <div class="col-auto">
                                                <div class="stat text-primary">
                                                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" class="bi bi-person-lines-fill" viewBox="0 0 16 16">
                                                        <path d="M6 8a3 3 0 1 0 0-6 3 3 0 0 0 0 6m-5 6s-1 0-1-1 1-4 6-4 6 3 6 4-1 1-1 1zM11 3.5a.5.5 0 0 1 .5-.5h4a.5.5 0 0 1 0 1h-4a.5.5 0 0 1-.5-.5m.5 2.5a.5.5 0 0 0 0 1h4a.5.5 0 0 0 0-1zm2 3a.5.5 0 0 0 0 1h2a.5.5 0 0 0 0-1zm0 3a.5.5 0 0 0 0 1h2a.5.5 0 0 0 0-1z" />
                                                    </svg>
                                                </div>
                                            </div>
                                        </div>

                                        <div class="mb-0">
                                            <button class="btn btn-lg btn-primary my-2">Click Here!</button>
                                        </div>
                                    </div>
                                </div>

                                <div class="card mt-2">
                                    <div class="card-body">

                                        <div class="row">
                                            <div class="col mt-0">
                                                <h5 class="card-title">Watch Catalog</h5>
                                            </div>

                                            <div class="col-auto">
                                                <div class="stat text-primary">
                                                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" class="bi bi-bookshelf" viewBox="0 0 16 16">
                                                        <path d="M2.5 0a.5.5 0 0 1 .5.5V2h10V.5a.5.5 0 0 1 1 0v15a.5.5 0 0 1-1 0V15H3v.5a.5.5 0 0 1-1 0V.5a.5.5 0 0 1 .5-.5M3 14h10v-3H3zm0-4h10V7H3zm0-4h10V3H3z" />
                                                    </svg>
                                                </div>
                                            </div>
                                        </div>

                                        <div class="mb-0">
                                            <button class="btn btn-lg btn-primary my-2">Click Here!</button>
                                        </div>
                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-xl-6 col-xxl-7 ">
                    <div class="card flex-fill w-100">
                        <div class="card-header">

                            <h5 class="card-title mb-0">Actions Log</h5>
                        </div>
                        <div class="card-body py-3 Action-Log-Section">
                            <div class="row py-1 mx-1">

                                    <div class="alert alert-primary h5" role="alert">
                                        Admin added a new book to the science fiction category
                                        <p class="mb-0 lead text-end" style="font-size: 0.9rem;">12:59 | 9 July, 2024</p>
                                    </div>
                                    <div class="alert alert-danger h5" role="alert">
                                        Admin removed the user "MhassaanK" 
                                        <p class="mb-0 lead text-end" style="font-size: 0.9rem;">12:57 | 9 July, 2024</p>
                                    </div>
                                    <div class="alert alert-success h5" role="alert">
                                        Admin created a new administrator: "MhassaanK"
                                        <p class="mb-0 lead text-end" style="font-size: 0.9rem;">12:55 | 9 July, 2024</p>
                                    </div>
                                    <div class="alert alert-danger h5" role="alert">
                                        Admin removed the user "Asjid@321"
                                        <p class="mb-0 lead text-end" style="font-size: 0.9rem;">12:51 | 9 July, 2024</p>
                                    </div>

                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>

    <!-- Bootstrap JS and dependencies -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/2.9.3/umd/popper.min.js"></script>
